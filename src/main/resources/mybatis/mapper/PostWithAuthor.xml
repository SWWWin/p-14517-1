<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.back.domain.post.post.repository.PostWithAuthorRepository">

    <!-- PostWithAuthor ResultMap -->
    <resultMap id="PostWithAuthorResultMap" type="com.back.domain.post.post.dto.PostWithAuthor">
        <!-- Post 필드 -->
        <id property="id" column="post_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="memberId" column="member_id"/>
        <result property="createDate" column="post_createDate"/>
        <result property="modifyDate" column="post_modifyDate"/>

        <!-- Member 필드 (association) -->
        <association property="author" javaType="com.back.domain.member.member.dto.Member">
            <id property="id" column="author_id"/>
            <result property="username" column="username"/>
            <result property="name" column="name"/>
            <result property="email" column="email"/>
            <result property="createDate" column="author_createDate"/>
            <result property="modifyDate" column="author_modifyDate"/>
        </association>
    </resultMap>

    <!-- 모든 게시글 + 작성자 조회 -->
    <select id="findAllWithAuthor" resultMap="PostWithAuthorResultMap">
        SELECT
            P.id AS post_id,
            P.title,
            P.content,
            P.memberId AS member_id,
            P.createDate AS post_createDate,
            P.modifyDate AS post_modifyDate,
            M.id AS author_id,
            M.username,
            M.name,
            M.email,
            M.createDate AS author_createDate,
            M.modifyDate AS author_modifyDate
        FROM post P
                 LEFT JOIN member M
                           ON P.memberId = M.id
    </select>

    <!-- ID로 게시글 + 작성자 조회 -->
    <select id="findByIdWithAuthor" parameterType="int" resultMap="PostWithAuthorResultMap">
        SELECT
            P.id AS post_id,
            P.title,
            P.content,
            P.memberId AS member_id,
            P.createDate AS post_createDate,
            P.modifyDate AS post_modifyDate,
            M.id AS author_id,
            M.username,
            M.name,
            M.email,
            M.createDate AS author_createDate,
            M.modifyDate AS author_modifyDate
        FROM post P
                 LEFT JOIN member M
                           ON P.memberId = M.id
        WHERE P.id = #{id}
    </select>

</mapper>
